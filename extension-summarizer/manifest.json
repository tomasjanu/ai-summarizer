{
  "manifest_version": 3,
  "name": "PDF Summarizer AI",
  "version": "1.1",
  "description": "Summarizes PDF files opened in Chrome using OpenAI API.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "offscreen",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/drink_water16.png",
      "48": "icons/drink_water48.png",
      "128": "icons/drink_water128.png"
    }
  },
  "icons": {
    "16": "icons/drink_water16.png",
    "48": "icons/drink_water48.png",
    "128": "icons/drink_water128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["lib/pdf.mjs", "lib/pdf.worker.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
